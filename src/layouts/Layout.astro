    ],
    "aggregateRating": { "@type": "AggregateRating", "ratingValue": "5.0", "reviewCount": "4", "bestRating": "5", "worstRating": "1" },
    "sameAs": [
      "https://www.facebook.com/p/HydroTech-JS-61573979556456/",
      "https://maps.app.goo.gl/wwdWoJdQHAHkjxen9"
    ],
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Usługi hydrauliczne",
      "itemListElement": [
        { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Hydraulika sanitarna" } },
        { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Instalacje centralnego ogrzewania" } },
        { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Pogotowie hydrauliczne 24/7" } },
        { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Uzdatnianie wody" } },
        { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Hydrofornie i pompy" } },
