  <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-lg border-b border-primary-100/50 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <a href="/" class="flex items-center gap-2 text-2xl font-bold text-primary-700 hover:text-primary-800 transition" aria-label="HydroTech J&S - Strona główna">
          <i class="fas fa-faucet-drip text-primary-500"></i>
          Hydro<span class="text-primary-500">Tech J&S</span>
        </a>
        <!-- Mobile menu button -->
        <button id="mobile-menu-btn" class="md:hidden p-2 text-gray-600 hover:text-primary-600 cursor-pointer" aria-label="Menu nawigacyjne">
          <i class="fas fa-bars text-xl"></i>
        </button>
        <!-- Desktop nav -->
        <nav class="hidden md:flex items-center gap-1" aria-label="Nawigacja główna">
          <a href="/" class="px-4 py-2 text-gray-700 hover:text-primary-600 hover:bg-primary-50 rounded-lg transition font-medium">
            <i class="fas fa-home mr-1"></i> Strona główna
          </a>
          <a href="/uslugi" class="px-4 py-2 text-gray-700 hover:text-primary-600 hover:bg-primary-50 rounded-lg transition font-medium">
            <i class="fas fa-tools mr-1"></i> Usługi
          </a>
          <a href="/blog" class="px-4 py-2 text-gray-700 hover:text-primary-600 hover:bg-primary-50 rounded-lg transition font-medium">
            <i class="fas fa-newspaper mr-1"></i> Blog
          </a>
          <a href="/kontakt" class="px-4 py-2 text-gray-700 hover:text-primary-600 hover:bg-primary-50 rounded-lg transition font-medium">
            <i class="fas fa-phone mr-1"></i> Kontakt
          </a>
        </nav>
      </div>
      <!-- Mobile nav -->
      <nav id="mobile-menu" class="hidden md:hidden pb-4" aria-label="Nawigacja mobilna">
