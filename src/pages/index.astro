          <a href="/kontakt" class="px-8 py-4 bg-transparent text-white rounded-full font-bold hover:bg-white/10 transition shadow-lg border-2 border-white/60 text-lg backdrop-blur-sm">
            <i class="fas fa-phone mr-2"></i>Kontakt
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services with mesh background -->
  <section class="py-20 md:py-24 bg-mesh-light bg-lines">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-14">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-3 water-pipe-line">Nasze usługi</h2>
        <p class="text-gray-600 max-w-2xl mx-auto mt-6">Oferujemy kompleksowe rozwiązania dla Twojego domu lub firmy</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {services.map((s) => (
          <div class="bg-white rounded-2xl p-8 shadow-md border border-primary-100/50 card-lift group">
            <div class={`w-16 h-16 rounded-2xl flex items-center justify-center mb-5 transition ${s.emergency ? 'bg-gradient-to-br from-red-500 to-red-600 text-white shadow-red-200 shadow-lg' : 'bg-gradient-to-br from-primary-500 to-primary-600 text-white shadow-primary-200 shadow-lg'}`}>
              <i class={`${s.icon} text-2xl`}></i>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">{s.title}</h3>
            <p class="text-gray-500 text-sm mb-5">{s.desc}</p>
            <ul class="space-y-2.5 mb-5">
              {s.features.map((f) => (
                <li class="flex items-center text-sm text-gray-700">
                  <i class={`fas fa-check-circle mr-2 text-sm ${s.emergency ? 'text-red-500' : 'text-primary-500'}`}></i>{f}
                </li>
              ))}
            </ul>
            <a href={s.emergency ? 'tel:+48502313419' : '/uslugi'}
               class={`inline-flex items-center text-sm font-semibold transition ${s.emergency ? 'text-red-600 hover:text-red-700' : 'text-primary-600 hover:text-primary-700'}`}>
