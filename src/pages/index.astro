---
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';
import GoogleMap from '../components/GoogleMap.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('posts', ({ data }) => data.status === 'published');
const latestPosts = allPosts
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

const services = [
  {
    icon: 'fas fa-faucet',
    title: 'Hydraulika',
    desc: 'Kompleksowe usługi instalacyjne i naprawcze',
    features: ['Instalacje wodne', 'Naprawy i konserwacje', 'Wymiana armatury'],
  },
  {
    icon: 'fas fa-thermometer-half',
    title: 'Ogrzewanie',
    desc: 'Instalacja i modernizacja systemów CO',
    features: ['Piece gazowe i olejowe', 'Kotły stałopalne', 'Ogrzewanie podłogowe'],
  },
  {
    icon: 'fas fa-tools',
    title: 'Awaria 24/7',
    desc: 'Całodobowa pomoc w nagłych przypadkach',
    features: ['Reakcja do 30 minut', '7 dni w tygodniu', 'Profesjonalny sprzęt'],
    emergency: true,
  },
];

const testimonials = [
  { name: 'Ryszard', initial: 'R', text: 'Szybko, sprawnie i terminowo. Polecam.', date: '5 miesięcy temu' },
  { name: 'Mati295', initial: 'M', text: 'Super wykonali robotę, polecam!', date: '6 miesięcy temu' },
  { name: 'Dominik Stawicki', initial: 'D', text: 'Solidna firma. Można polecić każdemu.', date: '7 miesięcy temu' },
  { name: 'Half -DeaD', initial: 'H', text: 'Świetna jakość usług!', date: '7 miesięcy temu' },
];

---

<Layout title="HydroTech J&S - Hydraulik Witnica | Awarie 24h | Instalacje CO">

  <!-- Hero with background image + dark overlay -->
  <section class="relative text-white overflow-hidden">
    <!-- Background image -->
    <div class="absolute inset-0">
      <Image src="https://images.unsplash.com/photo-1584622650111-993a426fbf0a?auto=format&fit=crop&w=1920&q=80" alt="Hydraulik Witnica - profesjonalne usługi hydrauliczne HydroTech J&S" class="w-full h-full object-cover" width={1920} height={1080} loading="eager" />
      <div class="absolute inset-0 bg-primary-900/75 backdrop-blur-[2px]"></div>
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-36 relative z-10">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-6xl font-extrabold mb-6 leading-tight drop-shadow-lg">
          Profesjonalne usługi hydrauliczne
        </h1>
        <p class="text-lg md:text-xl text-gray-300 mb-10">
          24h/7 &ndash; Gwarancja jakości &ndash; Szybka interwencja
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/uslugi" class="px-8 py-4 bg-primary-500/90 text-white rounded-full font-bold hover:bg-primary-400 transition shadow-lg text-lg backdrop-blur-sm">
            <i class="fas fa-tools mr-2"></i>Nasze Usługi
