          <p class="text-gray-600 mt-6">Zobacz nasze najnowsze wpisy</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {latestPosts.map((post) => (
            <PostCard
              title={post.data.title}
              description={post.data.description}
              date={post.data.date}
              slug={post.id.replace('.md', '')}
              category={post.data.category}
              featuredImage={post.data.featured_image}
              gallery={post.data.gallery}
              tags={post.data.tags}
            />
          ))}
        </div>
        <div class="text-center mt-12">
          <a href="/blog" class="px-8 py-4 bg-primary-600 text-white rounded-xl font-semibold hover:bg-primary-700 transition shadow-md inline-flex items-center text-lg">
            Zobacz wszystkie wpisy <i class="fas fa-arrow-right ml-2"></i>
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Contact + Map with mesh background -->
  <section class="py-20 md:py-24 bg-mesh-light">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
